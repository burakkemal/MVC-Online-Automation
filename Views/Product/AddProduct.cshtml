@model MvcOnlineTicariOtomasyon.Models.Classes.Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddProduct</h2>
<div class="container" style="margin-left:10px;">
    <form class="form-group" method="post">
        <br />
        @Html.Label("Ürün Adı")
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        <br />
        @Html.Label("Marka")
        @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
        <br />
        @Html.Label("Stok")
        @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
        <br />
        @Html.Label("Alış fiyatı")
        @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
        <br />
        @Html.Label("Satış Fiyatı")
        @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori")
        @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
        <br />
        @Html.Label("Ürün Görsel")
        @Html.TextBoxFor(x => x.ProductImage, new { @class = "form-control" })
        <br />
        @Html.Label("Durum")
        @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
        <br />
        <button class="btn btn-sm" style="background-color:yellow; color:red;">Ürün Ekle</button>
    </form>
</div>



@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<BillPen>
@{
    ViewBag.Title = "BillDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Fatura Kalemleri Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>

<br />
<table class="table table-hover">
    <tr>
        <th>Personel Id</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BillPenId</td>
            <td>@item.Description</td>
            <td>@item.Quantity</td>
            <td>@item.UnitPrice</td>
            <td>@item.Amount</td>            
        </tr>
    }
</table>
<a href="/Bill/NewPen" class="btn btn-default" style="background-color:darksalmon"> Yeni Kalem Girişi</a>


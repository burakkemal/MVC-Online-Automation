@model  MvcOnlineTicariOtomasyon.Models.Classes.Department
@{
    ViewBag.Title = "AddDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Departman Sayfası</h2>
<div class="container" style="margin-left:10px;">
    <h2>Yeni Kategori Sayfası</h2>
    <br />
    <form class="form-group" method="post">
        @Html.Label("Departman Adı")
        @Html.TextAreaFor(x =>x.DepartmentName, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Kaydet</button>
    </form>
</div>
